# this contains a list of useful commands to remember

# list the top 10 biggest files 
du . -ah | sort -rh | head -n 10

#List all available commands 
compgen -c

# show all options for if statements
man test

# show the command 
command -v <input>

 
#reset network card
sudo systemctl restart NetworkManager

#ip address
ip a

#routing tables
ip r

# list all users
cat /etc/passwd | awk -F: '{print }'

# show keyboard input (^H for ctrl Backspace)
cat -v
