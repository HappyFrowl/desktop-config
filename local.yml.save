---
- hosts: localhost
  connection: local
  become: true

  tasks:
  - name: install packages
    package:
      name: nvidia-drivers
      name: snapd
      name: python3-psutils
      name: htop
      name: vlc
      name: timeshift
      name: Ksystemlog
      name: brave-browser
      name: qbittorrent
      name: teamviewer
      name: zsh
      name: flatpak

  - name: copy wallpaper file
    copy:
      src: files/wallpaper.png
      dst: /usr/shr/background.png
      owner: root
      group: root

  - name: set wallpaper
    become_user: filip
    dconf:
      key:
      value:

  - name: set wallpaper position
    become_user: filip
    dconf:
      key:
      value:

  - name: copy bashrc file
    copy:
      src: files/bashrc
      dst: /home/filip/.bashrc
      owner: filip
      group: filip

  - name: copy brave file
    copy:
      src:
      dst: 
      owner: filip
      group: filip
